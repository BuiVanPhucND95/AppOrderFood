<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/size190dp"
    android:background="@drawable/backgroundheader">

    <ImageView
        android:id="@+id/iv_HinhAnh_Navigation"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="24dp"
        android:src="@drawable/logodangnhap" />

    <TextView
        android:id="@+id/tv_TenNhanVien_Navigation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_HinhAnh_Navigation"
        android:layout_marginLeft="24dp"
        android:textColor="@color/colororange"
        android:textSize="@dimen/size18sp"
        android:textStyle="bold" />
</RelativeLayout>