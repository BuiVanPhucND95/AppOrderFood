<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/size5dp">

    <ImageView
        android:id="@+id/ivCustom_HinhAnhMonAn"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/backgroundheader"
        android:scaleType="centerCrop"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/size50dp"
        android:orientation="vertical"
        android:background="@color/colorTransGreen"
        android:layout_gravity="bottom">
        <TextView
            android:id="@+id/tvCustom_TenMonAn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textSize="@dimen/size18sp"
            android:textColor="@color/colorWhite"
            android:layout_gravity="center"/>
        <TextView
            android:id="@+id/tvCustom_GiaTienMonAn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textColor="@color/colorWhite"
            android:layout_gravity="center"/>

    </LinearLayout>

</FrameLayout>